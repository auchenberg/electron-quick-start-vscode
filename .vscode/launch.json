{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Electron Main",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
      "args": ["${workspaceRoot}/main.js", "--remote-debugging-port=9333"],
      "protocol": "inspector"
    },
    {
      "name": "Electron Renderer",
      "type": "chrome",
      "request": "attach",
      "port": 9333,
      "webRoot": "${workspaceRoot}"
    }
  ],
  "compounds": [
    {
      "name": "Hybrid",
      "configurations": ["Electron Main", "Electron Renderer"]
    }
  ]
}
